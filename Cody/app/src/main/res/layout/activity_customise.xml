<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".database.CustomiseActivity">

    <RelativeLayout
        android:id="@+id/cust_relativelayoutcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollview_customise"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/layout_customise"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:columnCount="2"
                    android:layout_gravity="center_horizontal"
                    android:useDefaultMargins="true"
                    android:paddingTop="50dp"
                    android:paddingBottom="25dp"
                    android:rowCount="3">

                    <ImageButton
                        android:id="@+id/imagebutton_cus1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/add100x100" />


                    <ImageButton
                        android:id="@+id/imagebutton_cus2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/add100x100" />


                    <ImageButton
                        android:id="@+id/imagebutton_cus3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/add100x100" />


                    <ImageButton
                        android:id="@+id/imagebutton_cus4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/add100x100" />


                    <ImageButton
                        android:id="@+id/imagebutton_cus5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/add100x100" />


                    <ImageButton
                        android:id="@+id/imagebutton_cus6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/add100x100" />

                </GridLayout>

                <Button
                    android:id="@+id/button_capture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:text="@string/cust_wearthis"
                    android:backgroundTint="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
        </ScrollView>




    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"
        app:layout_anchorGravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


</android.support.constraint.ConstraintLayout>