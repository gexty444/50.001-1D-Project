<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginBottom="50dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <GridLayout
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <RelativeLayout>

            <ImageView
                android:id="@+id/rec_imageView2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/example_top" />

            <ImageView
                android:id="@+id/rec_imageView3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/rec_imageView2"
                android:layout_alignStart="@+id/rec_imageView6"
                android:layout_alignBottom="@+id/rec_imageView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="124dp"
                app:srcCompat="@drawable/example_bottom" />

            <ImageView
                android:id="@+id/rec_imageView4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/rec_imageView2"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="47dp"
                android:layout_marginTop="144dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/example_shoes" />

            <ImageView
                android:id="@+id/rec_imageView5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/rec_imageView2"
                app:srcCompat="@drawable/blackcap" />

            <ImageView
                android:id="@+id/rec_imageView6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignStart="@+id/rec_imageView5"
                android:layout_alignTop="@+id/rec_imageView3"
                android:layout_alignEnd="@+id/rec_imageView5"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="135dp"
                android:layout_marginRight="0dp"
                app:srcCompat="@drawable/example_bag" />


            <ImageView
                android:id="@+id/rec_imageView7"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/rec_imageView6"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/rec_imageView4"
                app:srcCompat="@drawable/example_shoes" />

            </RelativeLayout>
        </GridLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>